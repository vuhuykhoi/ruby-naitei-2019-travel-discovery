$("#comment-modal-<%= @post_id %>").modal("hide");
$("#commented-users-modal-<%= @post_id %>").html("<%= escape_javascript(render partial: "comment_modal",locals: { post_id: @post_id }) %>");
$("#comment-modal-<%= @post_id %>").modal("show");
