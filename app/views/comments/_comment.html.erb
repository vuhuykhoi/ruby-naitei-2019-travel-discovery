<li>
  <%= gravatar_for comment.user, size: Settings.user.gravatar_size_mini %>
  <%= link_to comment.user.username, comment.user %>
  <span class="comment-timestamp">
    <%= time_ago_in_words(comment.created_at)%>
  </span>
  <span class="comment-edit">
  <% if current_user?(comment.user) %>
  <%= link_to t("button.delete"),comment,
                                  method: :delete,
                                  data: { confirm: t("dialog.delete_comment_confirm") },
                                  remote: true %>
  <% end %>
  </span>
  <span class= "comment-content">
    <%= comment.content %>
  </span>
</li>
