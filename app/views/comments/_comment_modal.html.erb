<div id="comment-modal-<%= @post_id %>" class="list-comment-modal modal fade" role="dialog">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title"><%= t("label.comments") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <% if @list_post_comments.any? %>
          <ul class="users follow">
            <%= render @list_post_comments %>
          </ul>
        <% end %>
      </div>

      <%= form_for(current_user.comments.build, remote: true) do |f| %>
        <div class="form-group modal-comment-input">
          <%= f.hidden_field :post_id, value: post_id %>
          <%= f.label :comment, class: "col-form-label" %>
          <%= f.text_field :content, class: "form-control" %>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              <%= t("button.close") %>
            </button>
            <%= f.submit t("button.comment"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
